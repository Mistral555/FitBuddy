     <script>
        

        function updateMailtoLink() {
            
            let s = document.querySelector("#sub").value;
            let b = document.querySelector("#bod").value;

            
            var mailtoLink = "mailto:FitBuddy@gmail.com?subject=" + encodeURIComponent(s) + "&body=" + encodeURIComponent(b) ;

            
            document.getElementById("submit-button").href = mailtoLink;
        }

        document.getElementById("submit-button").addEventListener("click", updateMailtoLink);


        
     </script>


